<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/srcollView"
        android:background="@color/light_grey" />

    <HorizontalScrollView
        android:id="@+id/srcollView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="5dp"
        android:fillViewport="true"
        android:measureAllChildren="false"
        android:scrollbars="none">

        <LinearLayout
            android:id="@+id/layoutAnim"
            android:layout_width="match_parent"
            android:layout_height="68dp"
            android:gravity="center"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="15dp"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <View
                    android:id="@+id/view1"
                    android:layout_width="50dp"
                    android:layout_height="3dp"
                    android:background="@color/cardColor"
                    android:visibility="invisible" />

                <android.support.v7.widget.CardView
                    android:id="@+id/cardViewBus"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    card_view:cardCornerRadius="30dp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/white"
                        android:scaleType="fitCenter"
                        android:src="@drawable/online_bus" />
                </android.support.v7.widget.CardView>

            </LinearLayout>

            <LinearLayout
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="15dp"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <View
                    android:id="@+id/view2"
                    android:layout_width="50dp"
                    android:layout_height="3dp"
                    android:background="@color/cardColor"
                    android:visibility="invisible" />

                <android.support.v7.widget.CardView
                    android:id="@+id/cardViewTrain"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    card_view:cardCornerRadius="30dp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/white"
                        android:scaleType="centerCrop"
                        android:src="@drawable/online_train1" />
                </android.support.v7.widget.CardView>

            </LinearLayout>

            <LinearLayout
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="15dp"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <View
                    android:id="@+id/view3"
                    android:layout_width="50dp"
                    android:layout_height="3dp"
                    android:background="@color/cardColor"
                    android:visibility="invisible" />

                <android.support.v7.widget.CardView
                    android:id="@+id/cardViewKsrtc"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    card_view:cardCornerRadius="30dp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/white"
                        android:scaleType="centerCrop"
                        android:src="@drawable/online_ksrtc3" />
                </android.support.v7.widget.CardView>

            </LinearLayout>
        </LinearLayout>
    </HorizontalScrollView>


</RelativeLayout>